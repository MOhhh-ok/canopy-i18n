{
    "extends": "@tsconfig/node20/tsconfig.json",
    "compilerOptions": {
        "jsx": "react-jsx",
        "rootDir": "./src", /* Specify the root folder within your source files. */
        "outDir": "./dist", /* Specify an output folder for all emitted files. */
        "declaration": true,
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.tsx"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}