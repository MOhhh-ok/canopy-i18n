{
    "compilerOptions": {
        "target": "ES2020",
        "module": "NodeNext",
        "esModuleInterop": true,
        "rootDir": "./src",
        "outDir": "./dist",
        "declaration": true,
        "sourceMap": true,
        "types": [
            "jest"
        ],
        "moduleResolution": "NodeNext"
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "src/**/*.spec.ts"
    ]
}